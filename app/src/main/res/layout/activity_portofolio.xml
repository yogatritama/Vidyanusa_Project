<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vidyanusa.siswa.app.PortofolioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <Button
                android:id="@+id/btn_prestasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_add_white_24dp"
                android:text="Tambah prestasi"/>

            <Button
                android:id="@+id/btn_organisasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_add_white_24dp"
                android:text="Tambah pengalaman organisasi"/>

            <Button
                android:id="@+id/btn_minatbakat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_add_white_24dp"
                android:text="Tambah minat bakat"/>

            <Button
                android:id="@+id/btn_sertifikat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_add_white_24dp"
                android:text="Tambah sertifikat"/>

            <Button
                android:id="@+id/btn_hobi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_add_white_24dp"
                android:text="Tambah hobi"/>

            <Button
                android:id="@+id/btn_mediasosial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_add_white_24dp"
                android:text="Tambah media sosial"/>

            <Button
                android:id="@+id/btn_bahasa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_add_white_24dp"
                android:text="Tambah bahasa"/>

            <Button
                android:id="@+id/btn_karya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_add_white_24dp"
                android:text="Tambah karya"/>

    </LinearLayout>

</ScrollView>
